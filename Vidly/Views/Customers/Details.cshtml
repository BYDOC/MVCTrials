@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    @if (Model.Birthday.HasValue)
    {
        <li>@Model.Birthday.Value.ToShortDateString()</li>
    }
    
    <li>Membership Type: @Model.MembershipType.Name</li>
</ul>