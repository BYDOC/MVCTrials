@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m=>m.Movie.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Movie.ReleaseDate)
        @Html.TextBoxFor(m=>m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>@Html.CheckBoxFor(m=>m.Movie.IsSubscribedToNewsletter)</label>Is Subscribed to Newsletter?
    </div>
 @Html.HiddenFor(m=>m.Movie.Id)
       <button type="submit" class="btn btn-primary">Save</button>
}

